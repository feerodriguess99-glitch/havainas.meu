<!-- Carrinho Lateral -->
<div id="cart" style="position:fixed;top:0;right:-400px;width:360px;height:100%;background:#fff;box-shadow:-10px 0 30px rgba(0,0,0,.2);padding:24px;transition:.3s;z-index:99">
  <h3>Seu carrinho</h3>
  <ul id="cartItems" style="margin:16px 0"></ul>
  <strong>Total: R$ <span id="total">0.00</span></strong><br/>
  <a class="btn" style="width:100%;text-align:center" href="#">Finalizar compra</a>
</div>

<script>
let total = 0;
const cart = document.getElementById('cart');
const totalEl = document.getElementById('total');
const cartItems = document.getElementById('cartItems');

document.querySelectorAll('.btn').forEach(btn => {
  if(btn.innerText.includes('Adicionar')){
    btn.onclick = () => {
      const name = btn.parentElement.querySelector('h3').innerText;
      const price = 39.90;
      total += price;
      totalEl.innerText = total.toFixed(2);
      const li = document.createElement('li');
      li.innerText = name + ' - R$ ' + price.toFixed(2);
      cartItems.appendChild(li);
      cart.style.right = '0';
    }
  }
});
</script>

